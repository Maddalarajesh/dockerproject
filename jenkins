pipeline {
    agent any

    stages {
        stage('Terraform Init') {
            steps {
                withTerraform(installation: 'Terraform') {
                    sh 'terraform init'
                }
            }
        }
        stage('Terraform Apply') {
            steps {
                withTerraform(installation: 'Terraform') {
                    sh 'terraform apply -auto-approve'
                }
            }
        }
    }
}
